<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.logger_test.mapper.UserMapper">

    <select id="getAllUser" resultType="map">
    select * from user_bean
  </select>

    <select id="findUserById" resultType="com.example.logger_test.entity.User">
        select * from user_bean where id=#{id}
    </select>

    <select id="findUserByEmail" resultType="com.example.logger_test.entity.User">
        select * from user_bean where email=#{email}
    </select>

    <insert id="addUser" >
        insert into user_bean values (#{id}, #{email}, #{name}, #{password})
    </insert>
</mapper>